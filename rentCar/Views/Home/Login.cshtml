@{
    ViewBag.Title = "Login Using Angular";
}

<!DOCTYPE html>
<html>
<head>
    <title>Strona Główna!</title>

    <meta charset="utf-8">

    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.5.7/angular.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.5.7/angular-route.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.5.7/angular-animate.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.5.7/angular-animate.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/ui-bootstrap-tpls-1.1.2.min.js"></script>
    <link href="~/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/bootstrap-theme.min.css" rel="stylesheet" />
    <script src="~/Scripts/Chart.min.js"></script>
    <script src="~/Scripts/angular-chart.min.js"></script>
    <link href="~/css/angular-chart.min.css" rel="stylesheet" />


    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">

    <script src="~/rentCar/Controller/SignupController.js"></script>
    <script src="~/rentCar/Controller/AboutController.js"></script>
    <script src="~/rentCar/Controller/MainController.js"></script>
    <script src="~/rentCar/App.js"></script>
    <script src="~/rentCar/Controller/LoginController.js"></script>
</head>
<body>

    <h2>Login Using Angular</h2>


    <div ng-app="App" ng-controller="LoginController">
        <form name="myForm" novalidate ng-submit="LoginForm()">
            <div style="color:green">{{msg}}</div>
            <table ng-show="!IsLoggedIn" class="table table-horizontal">
                <tr>
                    <td>Login:</td>
                    <td>
                        <input type="Login" ng-model="Login.Login" name="Login" ng-class="Submited?'ng-dirty':''" required autofocus class="form-control" />
                        <span style="color:red" ng-show="(myForm.Login.$dirty || Submited ) && myForm.Login.$error.required">Please enter Login</span>
                        <span style="color:red" ng-show="myForm.Login.$error.Login">Login is not valid</span>
                    </td>
                </tr>
                <tr>
                    <td>Password :</td>
                    <td>
                        <input type="password" ng-model="Login.Password" name="Password" ng-class="Submited?'ng-dirty':''" required autofocus class="form-control" />
                        <span style="color:red" ng-show="(myForm.Password.$dirty || Submited) && myForm.Password.$error.required">Password Required</span>
                    </td>
                </tr>
                <tr>
                    <td></td>
                    <td>
                        <input type="submit" value="submit" class="btn btn-success" />
                    </td>
                </tr>
            </table>
        </form>
    </div>
</body>
</html>

